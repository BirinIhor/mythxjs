{
  "name": "mythxjs",
  "version": "0.0.1",
  "description": "Mythxjs is a library for the MythX smart contract security analysis platform.",
  "keywords": [
    "MythX",
    "Smart Contract",
    "Ethereum",
    "Blockchain",
    "Security"
  ],
  "author": "Eswara Sai @eswarasai",
  "homepage": "https://github.com/ConsenSys/mythxjs",
  "repository": "https://github.com/ConsenSys/mythxjs.git",
  "bugs": "https://github.com/ConsenSys/mythxjs/issues",
  "license": "MIT",
  "dependencies": {
    "@oclif/command": "^1",
    "@oclif/config": "^1",
    "@oclif/plugin-help": "^2",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@oclif/test": "^1",
    "@oclif/tslint": "^3",
    "@types/chai": "^4",
    "@types/mocha": "^5",
    "@types/node": "^10",
    "chai": "^4",
    "globby": "^8",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^5",
    "nyc": "^13",
    "prettier": "^1.16.4",
    "ts-node": "^8",
    "tslint": "^5",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "bin": {
    "mythxjs": "./bin/run"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "mythxjs",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "tslint --fix -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "tslint -p test -t stylish",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "prettier-ts": "prettier --write --parser typescript \"{src,test}/**/*.ts\"",
    "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write --parser typescript",
      "yarn lint:fix",
      "git add"
    ]
  }
}
